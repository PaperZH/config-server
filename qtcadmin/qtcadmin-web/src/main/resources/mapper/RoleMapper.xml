<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ucar.qtc.admin.dao.RoleDao">

	<select id="get" resultType="com.ucar.qtc.admin.domain.RoleDO">
		select
		`role_id`,`role_name`,`role_desc`,`remark`,`create_time`,`update_time`,`del_flag`
		from sys_role where role_id = #{value}
	</select>

	<select id="list" resultType="com.ucar.qtc.admin.domain.RoleDO">
		select
		`role_id`,`role_name`,`role_desc`,`remark`,`create_time`,`update_time`,`del_flag`
		from sys_role a
		<where>
			a.del_flag = 1
			<if test="roleId != null and roleId != ''"> and role_id = #{roleId} </if>
			<if test="roleName != null and roleName != ''">
				AND a.role_name LIKE concat('%',#{roleName},'%')
			</if>
			<if test="roleDesc != null and roleDesc != ''">
				AND a.role_desc LIKE concat('%',#{roleDesc},'%')
			</if>
		</where>
		<choose>
			<when test="sort != null and sort.trim() != ''">
				order by ${sort} ${order}
			</when>
			<otherwise>
				order by role_id desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="count" resultType="int">
		select count(*) from sys_role a
		<where>
			a.del_flag = 1
			<if test="roleId != null and roleId != ''"> and role_id = #{roleId} </if>
			<if test="roleName != null and roleName != ''">
				AND a.role_name LIKE concat('%',#{roleName},'%')
			</if>
			<if test="roleDesc != null and roleDesc != ''">
				AND a.role_desc LIKE concat('%',#{roleDesc},'%')
			</if>
		</where>
	</select>

	<insert id="save" parameterType="com.ucar.qtc.admin.domain.RoleDO"
		useGeneratedKeys="true" keyProperty="roleId">
		insert into sys_role
		(
		`role_name`,
		`role_desc`,
		`remark`,
		`del_flag`
		)
		values
		(
		#{roleName},
		#{roleDesc},
		#{remark},
		#{delFlag}
		)
	</insert>

	<update id="update" parameterType="com.ucar.qtc.admin.domain.RoleDO">
		update sys_role
		<set>
			<if test="roleName != null">`role_name` = #{roleName}, </if>
			<if test="roleDesc != null">`role_desc` = #{roleDesc}, </if>
			<if test="remark != null">`remark` = #{remark}, </if>
		</set>
		where role_id = #{roleId}
	</update>

	<delete id="remove">
        update sys_role set del_flag = 0 where role_id = #{value}
	</delete>

	<delete id="batchRemove">
		update sys_role set del_flag = 0
		where role_id in
		<foreach item="roleId" collection="array" open="(" separator=","
			close=")">
			#{roleId}
		</foreach>
	</delete>

	<select id="roleIdsByUserId" resultType="java.lang.Long">
		select r.role_id from sys_role r,sys_user_role ur
		where r.role_id = ur.role_id and ur.user_id =#{userId}
	</select>

</mapper>