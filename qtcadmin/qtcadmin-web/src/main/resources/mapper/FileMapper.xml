<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ucar.qtc.admin.dao.FileDao">

    <select id="get" resultType="com.ucar.qtc.admin.domain.FileDO">
		select `id`,`type`,`url`,`title`,`content`,`order_num`,`create_time`,`update_time` from sys_file where id = #{value}
	</select>

    <select id="list" resultType="com.ucar.qtc.admin.domain.FileDO">
        select `id`,`type`,`url`,`title`,`content`,`order_num`,`create_time`,`update_time`
        from sys_file a
        <where>
            a.del_flag = 1
            <if test="id != null and id != ''"> and id = #{id} </if>
            <if test="type != null and type != ''"> and type = #{type} </if>
            <if test="title != null and title != ''">
                AND a.title LIKE concat('%',#{title},'%')
            </if>
        </where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
            <otherwise>
                order by order_num desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="count" resultType="int">
        select count(*) from sys_file a
        <where>
            a.del_flag = 1
            <if test="id != null and id != ''"> and id = #{id} </if>
            <if test="type != null and type != ''"> and type = #{type} </if>
            <if test="title != null and title != ''">
                AND a.title LIKE concat('%',#{title},'%')
            </if>
        </where>
    </select>

    <insert id="save" parameterType="com.ucar.qtc.admin.domain.FileDO" useGeneratedKeys="true" keyProperty="id">
		insert into sys_file
		(
			`type`,
			`url`,
			`title`,
			`content`,
			`order_num`,
			`del_flag`
		)
		values
		(
			#{type},
			#{url},
			#{title},
			#{content},
			#{orderNum},
			#{delFlag}
		)
	</insert>

    <update id="update" parameterType="com.ucar.qtc.admin.domain.FileDO">
        update sys_file
        <set>
            <if test="type != null">`type` = #{type}, </if>
            <if test="url != null">`url` = #{url}, </if>
            <if test="title != null">`title` = #{title},</if>
            <if test="content != null">`content` = #{content}, </if>
            <if test="orderNum != null">`order_num` = #{orderNum}, </if>
        </set>
        where id = #{id}
    </update>

    <delete id="remove">
        update sys_file set del_flag = 0 where id = #{value}
	</delete>

    <delete id="batchRemove">
        update sys_file set del_flag = 0
        where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>